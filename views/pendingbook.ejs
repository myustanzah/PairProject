<%- include(`./partials/htmlHeader`)%>
<%- include(`./partials/htmlNavbarTenant`)%>


<div class="container">


    <h1>Pendingan booking</h1>
    <%if(typeof ad !== "undefined" && ad != null){%>
        <%console.log(ad == null)%>

        <div class="card mt-3" style="width: 30rem;">
            <img src="/<%=ad.image%>" class="card-img-top img-card" alt="...">
            <div class="card-body">
                <div class="row mt-3">
                    <h3 class="card-title"><%=ad.name%></h3>
                </div>
                <div class="row mt-3">
                    <h5 class="card-title">Lokasi</h5>
                    <p class="card-text location-card"><%=ad.location%></p>
                </div>
                <div class="row mt-3">
                    <h5 class="card-title">Tipe kost</h5>
                    <p class="card-text type-card"><%=ad.type%></p>
                </div>
                <div class="row mt-3">
                    <h5 class="card-title">Biaya</h5>
                    <p class="card-text price-card"><%=ad.joinPriceWithRenttype(moneyformatter)%></p>
                </div>
                <a href="/tenant/ads/cancel/<%=tenant.id%>" class="btn btn-primary">Cancel</a>
                <a href="/tenant/ads/apply/<%=ad.id%>/<%=tenant.id%>" class="btn btn-primary">Apply</a>
            </div>
        </div>
    <%}%>



</div>





<%- include(`./partials/htmlFooter`)%>