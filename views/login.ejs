<%- include(`./partials/htmlHeader`)%>

<div class="container">
    <div class="col-sm-6 offset-sm-3 text-center bg-success p-4 rounded mt-4">
        <img src="/papikos-logo.png" alt="" class="ml-auto mr-auto">
        <form method="POST" id="form-login">
            <div class="row mt-3">
                <div class="text-center offset-sm-3 col-sm-6">
                    <label for="email" class="form-label text-light">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="example@mail.com">
                </div>
            </div>
            <div class="row text-center mt-3">
                <div class="text-center offset-sm-3 col-sm-6">
                    <label for="password" class="form-label text-light">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="abcde">
                </div>
            </div>
            <div class="text-center mt-3">
                <div class="col-sm-6 offset-sm-3">
                    <button type="submit" class="btn btn-primary" style="width: 15em;" data-id="1" onclick="loginOption(this);">Masuk sebagai user</button>
                </div>
                <div class="col-sm-6 mt-3 offset-sm-3">
                    <button type="submit" class="btn btn-primary" style="width: 15em;" data-id="2" onclick="loginOption(this);">Masuk sebagai pemilik kost </button>
                </div>
            </div>

        </form>

    </div>

</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>
    function loginOption(e) {
        var id = e.getAttribute("data-id");
        if(id=="1") document.getElementById("form-login").action = `/tenant`
        else document.getElementById("form-login").action = `/landlord`;
    }
</script>

<%- include(`./partials/htmlFooter`)%>